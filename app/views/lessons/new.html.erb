<% content_for :title do %>
  Corsego 
  |
  Course
  <%= @course.title %>
  |
  New lesson
<% end %>

<p>
  <%= link_to 'Courses', courses_path %>
  |
  <%#= link_to @course.title, course_path(@course) %>
  <%= link_to course_path(@course) do %>
    <div class="fa fa-graduation-cap"></div>
    <%= @course.title %>
  <% end %>
  |
  New lesson
</p>

<div class="card">
  <div class="card-header">
    <h3>
      <div class="far fa-check-square"></div>
      New Lesson
    </h3>
  </div>
  <div class="card-body">
    <%#= render 'form' %>
    <%= render 'form', lesson: @lesson %>
  </div>
  <div class="card-footer">
    <%= link_to 'Back to course', course_path(@course) %>
  </div>
</div>