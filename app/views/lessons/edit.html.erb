<% content_for :title do %>
  Corsego 
  /
  Course
  <%= @course.title %>
  /
  Editing lesson
  <%= @lesson.title %>
<% end %>

<p>
  <%= link_to 'Courses', courses_path %>
  /
  <%= link_to @lesson.course.title, course_path(@lesson.course) %>
  /
  <%= link_to @lesson.title, course_lesson_path(@course, @lesson) %>
  /
  edit
</p>

<div class="card">
  <div class="card-header">
    <h3>
      <div class="far fa-check-square"></div>
      Editing Lesson
    </h3>
  </div>
  <div class="card-body">
    <%= render 'form', lesson: @lesson %>
  </div>
  <div class="card-footer">
    <%= link_to 'Show', course_lesson_path(@course, @lesson) %> 
    |
    <%= link_to 'Back to course', course_path(@lesson.course) %>
  </div>
</div>









